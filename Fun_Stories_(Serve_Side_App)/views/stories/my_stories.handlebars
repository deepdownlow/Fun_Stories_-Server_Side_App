<h4 class='center'>My Stories</h4>
<div class="row">
{{#each stories}}
<div class="col s12 m4">
 <div class="card z-depth-5 hoverable">
  <div class='card-image'>
   {{#if user}}
   {{{editIcon user.id ../user.id id}}}
   {{/if}}
  </div>
  <div class="card-content enter-align">
   <h5>{{title}}</h5>
   <p class='story-text'>{{noTag (truncate desc 150)}}</p>
   <br>
   <div class="chip">
    <img src="{{user.img}}">
    <a href="/stories/user/{{user.id}}">
    {{user.firstName}} {{user.lastName}}
    </a>
  </div>
  </div>
  <div class="card-action center-align">
   <div class="gery">
   <a href='/stories/show/{{id}}' class='black-text'>
    <i class="fab fa-readme"></i> Read More
    </a>
   </div>
  </div>
 </div>
</div>
{{else}}
<p>No story found</p>
{{/each}}
</div>