<div class="row">
 <form action="/stories/{{story.id}}?_method=PUT" class="col s12" method='post'>
  <input type="hidden" name='_method' value='PUT'>
  <div class="input-field col s12">
   <input name="title" type="text">
   <label for="title">{{story.title}}</label>
  </div>
  <div class="input-field col s12">
   <select name='status' value={{story.status}}>
    <option value="Public">Public</option>
    <option value="Private">Private</option>
    <option value="Unpublished">Unpublished</option>
   </select>
   <label>Status</label>
  </div>
  <div class='input-field col s12'>
   <p>
    <label>
     <input id="indeterminate-checkbox" type="checkbox" name='allowComments' {{#if story.allowComments}}checked='checked'{{/if}}/>
     <span>Allow comments</span>
    </label>
   </p>
  </div>
  <div class="input-field col s12">
   <h5>Tell us your story: </h5>
   <textarea name="desc">{{story.desc}}</textarea>
  </div>
  <input type="submit" value='save' class='btn'>
</div>
</form>
</div>